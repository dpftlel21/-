# Build stage
FROM node:18 AS build
WORKDIR /app

# 먼저 package.json 복사 및 설치
COPY package*.json ./
RUN npm install

# 전체 소스 코드와 .env 파일 복사
COPY . .

# 빌드
RUN npm run build

# Production stage
FROM nginx:alpine
COPY --from=build /app/dist /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]